{
  "compilerOptions": {
    "composite": true,
    "outDir": "./build/tsc-vitest",
    "rootDir": ".",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowJs": true,
    "target": "ES2022",
    "types": ["vitest/globals", "node"],
    "skipLibCheck": true
  },
  "include": ["vitest.config.ts", "build.config.ts", "bin/*", "bin/*"]
}
